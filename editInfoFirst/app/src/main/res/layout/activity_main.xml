<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ScrollView

        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="159dp"
                android:layout_height="209dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/avatar_sample" />

            <Button
                android:id="@+id/editMyPhotoButton"
                android:layout_width="369dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="내 사진 수정"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.499" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border"
                android:text="이름"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="홍길동"
                android:textSize="30dp"
                android:textStyle="bold"></EditText>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border"
                android:text="학번"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/stdnumEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2018030010"
                android:textSize="30dp"
                android:textStyle="bold"></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border"
                android:text="소속"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/majorEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="소프트웨어학과"
                android:textSize="30dp"
                android:textStyle="bold"></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border"
                android:text="거주지"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/placeEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="개성재 진리관"
                android:textSize="30dp"
                android:textStyle="bold"></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border"
                android:text="장애 정보"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/disabledSpinner"
                android:text="장애 종류"
                android:textSize="40dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="60dp" />

            <Spinner
                android:id="@+id/disabledClass"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="60dp"/>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/saveMyInfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="정보 저장"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8EBEE4">

    </LinearLayout>


</LinearLayout>